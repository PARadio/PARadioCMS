<%= error_messages_for(@episode)%>
<table summary="Episode form fields">
  <tr>
    <th><%= f.label(:name, "Name")%></th>
    <td><%= f.text_field(:name) %></td>
  </tr>
  <tr>
    <th><%= f.label(:stage, "Stage")%></th>
    <td><%= f.select(:stage, {"Authored"=>1, "Edited"=>2, "Published"=>3}) %></td>
  </tr>
  <tr>
    <th><%= f.label(:description, "Description")%></th>
    <td><%= f.text_area(:description, :size=> '40x10') %></td>
  </tr>
</table>
