<% if !@streamitem.errors.empty? %>
   <div class = "alert alert-error">
      <ul>
         <% @streamitem.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
         <% end %>
      </ul>
   </div>
<% end %>

<div class="container">
   <%= form_for @streamitem, url: {action: "create"} do |f| %>
    <div style="display: none;"><%= f.date_field :date, value: @selected_date.strftime('%Y-%m-%d') %></div>
    <%= f.collection_select(:episode_id, Admin::Episode.all, :id, :name, {}, {:class=>'form-control'}) %>
    <%= f.submit "Add", class: "btn btn-primary" %>
   <% end %>
</div>
