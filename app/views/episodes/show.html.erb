<%= link_to("<< Back to List", {:action => 'index'}, :class=>"back-link") %>

<div class= "episodes show">
  <h2>Show Episode</h2>

  <table summary="Episode detail view">
    <tr>
      <th>Name</th>
      <td><%= @episode.name %></td>
    </tr>
    <tr>
      <th>Episode Number</th>
      <td><%= @episode.number %></td>
    </tr>
    <tr>
      <th>Episode Stage</th>
      <td><%= @episode.stage %></td>
    </tr>
    <tr>
      <th>Description</th>
      <td><%= @episode.description%></td>
    </tr>
    <tr>
      <th>Transcript</th>
      <td><%= @episode.transcript %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @episode.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @episode.updated_at %></td>
    </tr>
  </table>
</div>
